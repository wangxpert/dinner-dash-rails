<div class="mailer">
  <%= image_tag("logo3.png", :alt => "logo", :class => "img-logo") %>
  <%= image_tag attachments['logo3.png'].url %>
  <div class="full-height scroll-bar">
    <table class="responsive-table">
      <thead>
        <tr style="background-color:#BCAAA4;">
          <th data-field="id">Item</th>
          <th data-field="name">Description</th>
          <th data-field="price">Price</th>
          <th data-field="quantity">Quantity</th>
          <th data-field="line total">Total Amt</th>
        </tr>
      </thead>
      <tbody>

      <% @current_order.ordered_items.each do |food_id, ordered_item| %>
        <tr>
          <td><%= ordered_item[0]['name'] %></td>
          <td><%= ordered_item[0]['description'] %></td>
          <td><%= ordered_item[0]['price'] %></td>
          <td><%= ordered_item[1] %></td>
          <td>N<%= ordered_item[0]['price'] * ordered_item[1]%></td>
        </tr>
        <% @current_order.sub_total += ordered_item[0]['price'] * ordered_item[1] %>
      </tbody>
      <% end %>

      <!--Find a better way of doing this -->
      <tr style="border-top:1px solid #3e2511">
        <td></td>
        <td></td>
        <td>Subtotal</td>
        <td></td>
        <td>N<%= @current_order.sub_total %></td>
      </tr>
      <tr>
        <% @current_order.vat %>
        <td></td>
        <td></td>
        <td>VAT</td>
        <td></td>
        <td>N<%= @current_order.vat %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td>Delivery</td>
        <td></td>
        <td>N<%= @current_order.delivery_cost %></td>
      </tr>
      <tfoot>
        <!--Find a better way of doing this -->
        <tr style="border-top:2px solid #3e2511">
          <td></td>
          <td></td>
          <td>Total</td>
          <td></td>
          <td id="total">N<%= @current_order.total %></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
